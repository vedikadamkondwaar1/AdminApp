<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@drawable/back"
    android:orientation="vertical">

    <ImageView
        android:layout_width="295dp"
        android:layout_height="158dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/slimage"></ImageView>

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="168dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewP"
            android:layout_width="150dp"
            android:layout_height="155dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/green">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="85dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/addproduct" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="110dp"
                android:textColor="@android:color/black"

                android:text="     ADD
                             PRODUCT"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewS"
            android:layout_width="159dp"
            android:layout_height="155dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/green">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="85dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/sales1" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="110dp"
                android:text=" SALES"
                android:textColor="@android:color/black"

                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="398dp"
        android:layout_height="161dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewI"
            android:layout_width="150dp"
            android:layout_height="145dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/green">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="85dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/inven" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="110dp"
                android:text="INVENTORY"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewPa"
            android:layout_width="159dp"
            android:layout_height="145dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/green">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="85dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/payment" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="110dp"
                android:text=" PAYMENT"
                android:textColor="@android:color/black"

                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="321dp"
        android:layout_height="36dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Developed by eSparse Matrix Solution Pvt Ltd"
        android:textSize="12sp"
        android:textStyle="italic|bold" />


</LinearLayout>